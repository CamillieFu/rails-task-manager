      <% @tasks.each do |task| %>
        <div class="d-flex flex-wrap border-bottom p-1">
          <li><%= link_to task.title, task_path(task) %></li>
            <%# confirm not functional  %>
          <li class="ml-auto"><%= link_to 'ğŸ—‘', task_path(task), method: :delete, data: { confirm: "Delete?" } %></li>
